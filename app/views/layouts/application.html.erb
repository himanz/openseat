<!DOCTYPE html>
<html>
<head>
  <title>Openseat</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
  <% end %>
  <% if flash[:alert] %>
    <p><%= flash[:alert] %></p>
  <% end %>

  <p>
  	<% if current_user %>
  	  Signed in as <%= current_user.first_name %> <%= current_user.last_name %>. <%= link_to "Log out", session_path("current"), :method => :delete %>
  	<% else %>
  	  <%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
  	<% end %>
  </p>
  
  <p><%= link_to "New Restaurant", new_restaurant_path %></p>
<%= yield %>

</body>
</html>
